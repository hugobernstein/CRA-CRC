@require "moduler/*"

@import "../../../node_modules/jeet/jeet"

// debug(lightblue)

*
  margin: 0
  padding: 0

body
  font-family sans-serif
  color $base03

h2, h3
  text-transform capitalize
  color $base01
  margin-top: .618rem

span
  font-style italic
  color $base0



ul
  margin 1.618rem 0
  li
    color $base02
    &:first-letter
      text-transform: capitalize

ol
  &.hebrew
    list-style-type: hebrew
  &.greek
    list-style-type: lower-greek
  &.cjk
    list-style-type: cjk-ideographic

a
  color $base00
  &:hover
    color $blue
    text-decoration none

#avsnitt
  // margin-top: 1.618rem
  clearfix()
  center()
  width 83vw
  line-height 1.6
  padding: 1.618rem


  aside
    font-size: .618rem
    column(1/3)

    h3
      font-size: 1rem
      font-style: italic

    a
      &:hover
        font-size: 1rem

  article
    column(2/3)
    text-align: justify

.sketch__pattern
  background-image repeating-linear-gradient(-45deg, rgba($base1, .08), rgba($base1, .08) 1px, transparent 1px, transparent 10px)
  background-size: 56px 56px

.sketch__pattern-v
  background-image repeating-linear-gradient(45deg, rgba($base2, .1), rgba($base2, .1) 1px, transparent 1px, transparent 10px)
  background-size: 56px 56px

.navbar__trans
  position: relative;
  height: 1.618rem * 3
  // background-color: $ikeayellow

  .nav__trans
    margin: 0
    padding: 0
    display: inline-block;
    float: right;
    margin-right: 5%

    .item__trans
      list-style: none;
      display: inline-block;
      font-size: 18px;
      padding: 5px;
      font-weight: 300;
      line-height: 80px;
      // margin-right: 20px;
      transition: 0.5s ease;

.logo__trans
  float: left;
  display: inline-block;
  margin-top: .618rem;
  margin-left: .618rem;
  width: 1.618rem*3;
  height: 1.618rem*3;
  transition: 0.5s ease;

  img
    width: 100%;

.title__logo__trans
  img
    height: 1.618rem*1.618;
